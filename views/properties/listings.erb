
<h2>All available properties</h2>


<article class="property-detail-wrapper">
    <% property_listings.each do |property| %>
    <section class="property-detail-card">
    
        <img src="<%= property['image_url']%>" alt="" >
    
        <h2><%= property['ad_line']%></h2>

        <h3><%= property['house_number']%>, <%= property['street_name']%>, <%= property['suburb']%>, <%= property['state']%>  <%= property['postcode']%></h3>

        
        <h3>
          <%= property['number_of_bedrooms']%> <i class="fa fa-hotel" style="color: #AE0F54"></i>&nbsp;&nbsp;&nbsp;<%= property['number_of_bathrooms']%> <i class="fa fa-bath" style="color: #AE0F54"></i>&nbsp;&nbsp;&nbsp;     
          <%= property['number_of_parkings']%> <i class="fa fa-car" style="color: #AE0F54"></i>
        </h3>

        <h3><%= property['property_type']%></h3>
        <h4>Rent: <%= property['price']%></h4>
      </section>

    <% end %>
</article>
